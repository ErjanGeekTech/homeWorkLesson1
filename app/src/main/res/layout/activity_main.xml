<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/email_et"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/edit_text_backround"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/person_icon"
        android:drawablePadding="10dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"/>

    <EditText
        android:id="@+id/password_et"
        android:background="@drawable/edit_text_backround"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:inputType="numberPassword"
        app:layout_constraintTop_toBottomOf="@id/email_et"
        android:drawableStart="@drawable/lock_icon"
        android:drawablePadding="10dp"
        android:paddingLeft="26dp"
        android:paddingRight="26dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"/>

    <TextView
        android:id="@+id/remember_me_txt"
        android:text="Remember Me"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/password_et"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="45dp"
        android:drawableStart="@drawable/check_box"
        android:drawablePadding="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/forget_password_txt"
        android:text="Forget Password"
        android:drawableStart="@drawable/lock_open"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/password_et"
        app:layout_constraintLeft_toRightOf="@id/remember_me_txt"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/log_in_btn"
        android:text="LOG IN"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/forget_password_txt"
        android:layout_marginHorizontal="38dp"
        android:background="@drawable/custom_button"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="SIGN UP"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/log_in_btn"
        android:layout_marginHorizontal="38dp"
        android:background="@drawable/sign_up_btn"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>